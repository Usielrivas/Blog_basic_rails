  <h1><%= @article.title %></h1> 
  <main>
    <%= @article.content %>
    <p>categories</p>
    <hr>
    <div>
      <p class="label">
      <% @article.categories.each do |category| %>
        <span style="background-color: <%= category.color%>;color:white">
          <%= link_to category.title, category, class: "text-white" %>
        </span>
      <% end %>
      </p>
    </div>
  </main>
  <%= button_to "Destroy", @article, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

