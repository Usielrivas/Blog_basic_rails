
<%= form_with(model: @article,local: true) do |form| %>
<div class="row">
  <div class="col-6">
    <div class="row">
      <div class="col-12">
        <%= form.label :title %> <%= form.text_field :title %>
      </div>
      <div class="col-12">
        <%= form.label :content %> <%= form.rich_text_area :content %>
      </div>
      <div class="col-12"><%= form.submit %></div>
    </div>
  </div>
</div>
<%end%>
